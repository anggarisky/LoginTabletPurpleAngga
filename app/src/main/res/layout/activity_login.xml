<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.pandame.anggarisky.logintabletpurpleangga.LoginActivity">


    <ImageView
        android:src="@drawable/app_logo"
        android:layout_width="60dp"
        android:layout_height="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:id="@+id/imageView"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/username"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/input_bg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textSize="16sp"
        android:textColor="#ADA394"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/password"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/password" />

    <EditText
        android:id="@+id/password"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/input_bg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:ems="10"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="#ADA394"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/btnsign"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/btnsign" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:text="Sign In"
        android:textColor="#FFF"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnreg"
        android:layout_width="296dp"
        android:layout_height="48dp"
        android:text="Create a New Account"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:background="@drawable/bg_create"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/btnsign"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
